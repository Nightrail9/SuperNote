{
"name": "supernote",
  "version": "1.0.0",
  "description": "SuperNote - Local-first note generator for Bilibili videos and web pages",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "npm run dev:server",
    "dev:server": "tsx apps/server/index.ts",
    "dev:web": "npm --prefix apps/web run dev",
    "build": "tsc",
    "build:web": "npm --prefix apps/web run build",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "typecheck": "tsc --noEmit",
    "test:server:file": "node scripts/test/run-server-test.mjs",
    "test:server:all": "node scripts/test/run-all-server-tests.mjs",
    "docker:config": "docker compose -f infra/docker/docker-compose.yml config",
    "docker:up": "docker compose -f infra/docker/docker-compose.yml up -d"
  },
  "keywords": [
    "bilibili",
    "video",
    "parser",
    "stream",
    "dash",
    "flv"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "fast-check": "^4.5.3",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "punycode": "^2.3.1"
  }
}
